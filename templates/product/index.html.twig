{% extends 'base.html.twig'%}

{% block title %}
    Produit
{% endblock %}

{% block body %}
    {% include('widgets/navbar/index.html.twig') %}

    <main>
        <div class="container">
            <div>
            <img src= {{product.urlimg}}>
            </div>
            <div>
                <div>
                    <div>
                        <h2>{{product.name}}</h2>
                        <p>{{product.description}}</p>
                        <p>{{product.price|format_currency('EUR')}}</p>
                        <a href="{{ path('app_add_product_to_cart', {'id': product.id}) }}">Ajouter au panier</a>
                    </div>
                <div>
            </div>
        </div>
    </main>
{% endblock %}