{% extends 'base.html.twig' %}

{% block title %}
    Catalogue
{% endblock %}

{% block body %}

{% include('widgets/navbar/index.html.twig') %}

<main>
<h2>Notre Catalogue</h2>

<div class="product-list">
    <div class="wrapper">
        <div class="card">
            <div class="structure">
                <div class="img-box">
                    <img src="https://aniki-shop.com/wp-content/uploads/2022/09/t-shirt-manga-jojos-bizarre-adventure-robe-t-shirt-coton-bio-sur-jotaro-kujho-daddy-issues-teeshirt-manga-jojo-1.png" alt="">
                </div>
                <div class="body">
        {% for product in products %}
        <div class="card">
        <a href="{{ path("app_product", { "id": product.id}) }}">
            <div class="structure">
                <div class="img-box">
                    <img src="https://aniki-shop.com/wp-content/uploads/2022/09/t-shirt-manga-jojos-bizarre-adventure-robe-t-shirt-coton-bio-sur-jotaro-kujho-daddy-issues-teeshirt-manga-jojo-1.png" alt="">
                </div>
                <div class="body">
                    <div></div>
                    <h6>{{product.name}}</h6>
                    <div class="price">
                        <p>{{product.price|format_currency('EUR')}}</p>
                    </div>
                </div>
            </div>
            </a>
        </div>
        {% endfor %}
        </div>
    </div>
</main>
    
{% endblock %}